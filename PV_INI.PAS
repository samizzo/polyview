   Procedure WriteConfig;
   Begin
      Writeln(CfgFile, '; ============================================================================');
      Writeln(CfgFile, '; PolyView ', Ver, ' Configuration File');
      Writeln(CfgFile, '; Written By Jestyr aka Sam Izzo [Polyester]');
      Writeln(CfgFile, '; ============================================================================');
      Writeln(CfgFile, '');
      Writeln(CfgFile, '; ----------------------------------------------------------------------------');
      Writeln(CfgFile, '; Lines beginning with a ; (semi-colon) are ignored, as are blank lines.');
      Writeln(CfgFile, '; The actual configuration items can appear anywhere in the file, ie there');
      Writeln(CfgFile, '; is no particular order they need to be in.');
      Writeln(CfgFile, '; The lines full of - (negatives) and = (equals) serve no purpose other than');
      Writeln(CfgFile, '; to break up the blocks of configuration data.');
      Writeln(CfgFile, '; ----------------------------------------------------------------------------');
      Writeln(CfgFile, '');
      Writeln(CfgFile, '; ----------------------------------------------------------------------------');
      Writeln(CfgFile, '; Default display mode for ANSI/ASCII/text');
      Writeln(CfgFile, '; Valid, built-in modes are:');
      Writeln(CfgFile, ';       0   - 80x25');
      Writeln(CfgFile, ';       1   - 80x30');
      Writeln(CfgFile, ';       2   - 80x43');
      Writeln(CfgFile, ';       3   - 80x50');
      Writeln(CfgFile, ';       4   - 80x25 with 350 scanlines (80x43 style)');
      Writeln(CfgFile, ';       5   - 80x25 with 200 scanlines (similar to 640x200 CGA)');
      Writeln(CfgFile, '; Alternatively, you can display a list of VESA text modes supported by your');
      Writeln(CfgFile, '; video card from PolyView''s configuration section and add it to the');
      Writeln(CfgFile, '; VESAModes line (automatically done in PolyView)');
      Writeln(CfgFile, 'Textmode=', DefaultTextMode);
      Writeln(CfgFile, '; ----------------------------------------------------------------------------');
      Writeln(CfgFile, '');
      Writeln(CfgFile, '; ----------------------------------------------------------------------------');
      Writeln(CfgFile, '; VESA modes follow this format:');
      Writeln(CfgFile, '; VESAModes=<number of VESA modes>');
      Writeln(CfgFile, '; ModeParams=<VESA mode number>,<X-res>,<Y-res>');
      Writeln(CfgFile, '; ModeParams is repeated VESAModes times, up to a maximum of 10.');
      Writeln(CfgFile, 'VESAmodes=', NumVESAModes);
      Writeln(CfgFile, '; ----------------------------------------------------------------------------');
      Writeln(CfgFile, '');
      Writeln(CfgFile, '; ----------------------------------------------------------------------------');
      Writeln(CfgFile, '; Default display mode for RIP');
      Writeln(CfgFile, '; Valid modes are:');
      Writeln(CfgFile, ';       0 - EGA 640x350x16');
      Writeln(CfgFile, ';       1 - VGA 640x350x16');
      Writeln(CfgFile, ';       2 - VGA 640x480x16');
      Writeln(CfgFile, 'RIPmode=', DefaultRIPMode);
      Writeln(CfgFile, '; ----------------------------------------------------------------------------');
   End;
